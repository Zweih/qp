[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Updating qp cache...
When = PostTransaction
Exec = /bin/sh -c 'REAL_USER="${SUDO_USER:-$USER}"; REAL_HOME=$(eval echo "~$REAL_USER"); sudo -u "$REAL_USER" HOME="$REAL_HOME" /usr/bin/qp --cache-only=pacman'
